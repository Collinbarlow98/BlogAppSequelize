<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="site.css"/>
</head>

<body>
{{> header}}
<form method = 'GET' action = '/logout'>
    <button class="buttons">Logout {{username}}</button>
</form>

<form method = 'get' action = '/home'>
    <button class="buttons">home button</button>
</form>

<h3>Add or update an entry</h3>
<form method = 'POST' action='/posts'>
  <input type="text" class="titleBox" placeholder="title" name="title">
  <button  class="buttons">Submit</button>
  <textarea rows="5" cols="50" name="body" placeholder="body"></textarea>
</form>
<h3>{{username}}'s Entries</h3>
<ul>
{{#posts}}
<h4>{{title}}</h4>
<p>{{body}}</p>
<form method="POST" action="/publish" {{hidden}}>
  <input type="hidden" name="postId" value="{{id}}">
  <input type="submit" name="submit" value="Publish">
</form>
<form method="POST" action="/post-detail">
  <input type="hidden" name="postId" value="{{id}}">
  <input type="submit" name="submit" value="Details">
</form>
<form method='POST' action = '/delete-post'>
  <input type="hidden" value={{id}} name="del_post">
  <button class="buttons">Remove</button>
</form>
{{/posts}}
{{^posts}}
<li><h4>No posts found</h4></li>
{{/posts}}
</ul>


</body>
</html>
